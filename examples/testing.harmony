import http from "http"
import json from "json"

struct User {
  id: string
  username: string
  email: string

  static fn create(data) {
    if data == nil {
      return nil
    }
  
    return new User{
      id: data["id"],
      username: data["userName"],
      email: data["email"],
    }
  }
}

